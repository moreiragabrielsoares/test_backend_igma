{
  "compilerOptions": {
    "target": "es2021",
    "strictNullChecks": true,
    "module": "commonjs",
    "baseUrl": "./src",
    "outDir": ".dist",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "strict": true
  },
  "include": ["src/**/*.ts"]
}
